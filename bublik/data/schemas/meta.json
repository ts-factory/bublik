{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "type": {
                "type": ["string", "null"],
                "description": "Type of metas belonging to this category"
            },
            "category": {
                "type": ["string", "null"],
                "description": "Category name",
                "examples": ["Test Suite", "Configuration", "User", "Status"]
            },
            "set-priority": {
                "anyOf": [
                    {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 10
                    },
                    {
                        "type": "null"
                    }
                ],
                "description": "Category priority indicating the importance of metas"
            },
            "set-comment": {
                "type": ["string", "null"],
                "description": "Additional information about the category"
            },
            "set-patterns":  {
                "type": "array",
                "items": {
                    "type": "string",
                    "uniqueItems": true
                },
                "description": "List of patterns for assigning metas to the category"
            }
        },
        "required": ["category", "type"],
        "additionalProperties": false
    },
    "default": [
        {
            "type": "label",
            "category": "Test Suite",
            "set-comment": "Category of run metas specifying the test suite name",
            "set-patterns": ["TS_NAME"]
        },
        {
            "type": "label",
            "category": "Configuration",
            "set-comment": "Category of run metas specifying the configuration",
            "set-patterns": ["CFG"]
        },
        {
            "type": "label",
            "category": "User",
            "set-comment": "Category of run metas specifying the user",
            "set-patterns": ["USER"]
        },
        {
            "type": "label",
            "category": "Status",
            "set-comment": "Category of run metas specifying the run status",
            "set-patterns": ["RUN_STATUS"]
        }
    ]
}
