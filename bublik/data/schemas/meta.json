{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "type": {
                "type": ["string", "null"]
            },
            "category": {
                "type": ["string", "null"]
            },
            "name": {
                "type": ["string", "null"]
            },
            "set-priority": {
                "anyOf": [
                    {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 10
                    },
                    {
                        "type": "null"
                    }
                ]
            },
            "set-comment": {
                "type": ["string", "null"]
            },
            "set-category": {
                "type": ["string", "null"]
            },
            "set-pattern":  {
                "type": ["string", "null"]
            }
        },
        "oneOf": [
            {
                "required": ["name", "set-category"],
                "not": {
                    "anyOf": [
                        { "required": ["category"] },
                        { "required": ["set-pattern"] }
                    ]
                }
            },
            {
                "required": ["category"],
                "not": {
                    "anyOf": [
                        { "required": ["name"] },
                        { "required": ["set-category"] }
                    ]
                }
            }
        ],
        "additionalProperties": false
    }
}
