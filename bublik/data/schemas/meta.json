{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "type": {
                "type": ["string", "null"]
            },
            "category": {
                "type": ["string", "null"]
            },
            "set-priority": {
                "anyOf": [
                    {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 10
                    },
                    {
                        "type": "null"
                    }
                ]
            },
            "set-comment": {
                "type": ["string", "null"]
            },
            "set-patterns":  {
                "type": "array",
                "items": {
                    "type": "string",
                    "uniqueItems": true
                }
            }
        },
        "required": ["category", "type"],
        "additionalProperties": false
    }
}
