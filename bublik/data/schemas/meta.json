{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Meta categorization configuration",
    "properties": {
        "Test Suite": {
            "$ref": "#/definitions/category",
            "description": "Category of run metas specifying the test suite name",
            "default": {
                "type": "label",
                "set-patterns": ["TS_NAME"]
            }
        },
        "Configuration": {
            "$ref": "#/definitions/category",
            "description": "Category of run metas specifying the configuration",
            "default": {
                "type": "label",
                "set-patterns": ["CFG"]
            }
        },
        "User": {
            "$ref": "#/definitions/category",
            "description": "Category of run metas specifying the user",
            "default": {
                "type": "label",
                "set-patterns": ["USER"]
            }
        },
        "Status": {
            "$ref": "#/definitions/category",
            "description": "Category of run metas specifying the run status",
            "default": {
                "type": "label",
                "set-patterns": ["RUN_STATUS"]
            }
        }
    },
    "propertyNames": {
        "minLength": 1
    },
    "patternProperties": {
        ".*": { "$ref": "#/definitions/category" }
    },
    "definitions": {
        "category": {
            "type": "object",
            "description": "Name of the meta category",
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Type of metas belonging to this category",
                    "minLength": 1
                },
                "set-priority": {
                    "type": "number",
                    "description": "Category priority indicating the importance of metas",
                    "minimum": 1,
                    "maximum": 10
                },
                "set-comment": {
                    "type": "string",
                    "description": "Additional information about the category",
                    "minLength": 1
                },
                "set-patterns": {
                    "type": "array",
                    "description": "List of patterns for assigning metas to the category",
                    "items": {
                        "type": "string",
                        "minLength": 1
                    },
                    "uniqueItems": true
                }
            },
            "required": ["type"],
            "additionalProperties": false
        }
    }
}
