{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "description": "Project references",
    "properties": {
        "LOGS": {
            "description": "Logs base and issue tracker URIs",
            "type": "object",
            "properties": {
                "LOGS_BASE": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "uri": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "uniqueItems": true
                        }
                    },
                    "required": [
                       "name",
                       "uri"
                    ],
                    "additionalProperties": false
                },
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "uri": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "uniqueItems": true
                        }
                    },
                    "required": [
                       "name",
                       "uri"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "LOGS_BASE"
            ]
        },
        "REVISIONS": {
            "description": "Revision URIs",
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "uri": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "uniqueItems": true
                    },
                    "reference_subpath": {
                        "type": "string"
                    }
                },
                "required": [
                    "uri"
                ],
                "additionalProperties": false
            }
        }
    },
    "required": [
        "LOGS",
        "REVISIONS"
    ],
    "additionalProperties": false
}
